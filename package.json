{
  "name": "MDTools",
  "description": "Text replacement functions e.g. change case, reverse and ASCII Art for all file types.",
  "version": "0.0.1",
  "publisher": "seanmcbreen",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "icon": "images/MDToolsIcon.svg",
  "bugs": {
    "url": "https://github.com/CodeEditorLand/CodeEditorLand/issues"
  },
  "homepage": "https://github.com/CodeEditorLand/CodeEditorLand#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeEditorLand/CodeEditorLand.git"
  },
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:extension.textFunctions"
  ],
  "engines": {
    "vscode": "1.0.0"
  },
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.textFunctions",
        "title": "Text Functions",
        "description": "Text functions on selections"
      }
    ],
    "keybindings": [
      {
        "command": "extension.textFunctions",
        "key": "Alt+T"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "prepublishOnly": "TypeScriptESBuild Source/**/*.ts"
  },
  "dependencies": {
    "underscore.string": "3.3.6",
    "figlet": "1.7.0"
  },
  "devDependencies": {
    "vscode": "0.11.0",
    "typescript": "5.2.2",
    "typescript-esbuild": "0.3.1"
  },
  "type": "module",
  "private": "false",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Nikola Hristov",
    "email": "nikola@nikolahristov.tech",
    "url": "https://nikolahristov.tech"
  }
}
